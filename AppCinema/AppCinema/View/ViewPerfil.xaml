<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viemodel="clr-namespace:AppCinema.ViewModel"
             x:Class="AppCinema.View.ViewPerfil">

    <ContentPage.BindingContext>
        <viemodel:ViewModelPerfil/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="30" HorizontalTextAlignment="Center"  Text="{Binding Usuario.Email}"  />
            <Label  FontSize="30" HorizontalTextAlignment="Center"  Text="{Binding Usuario.Pass}" />
            <Label  FontSize="30" HorizontalTextAlignment="Center"  Text="{Binding Usuario.Name}"  />
            <Label  FontSize="30" HorizontalTextAlignment="Center"  Text="{Binding Usuario.LastName}"  />
            <Label  FontSize="30" HorizontalTextAlignment="Center"  Text="{Binding Usuario.Age}"  />
            <Label Text="ponte a currar" FontSize="40"/>

            <Image  Source="{Binding Usuario.Image}" HorizontalOptions="Center" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>